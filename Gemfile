source 'http://rubygems.org'

gem 'rails', '3.2.12'

gem 'turbo-sprockets-rails3' # speed up deploys
gem 'pg' # postgresql database adapter
gem "forgery" # faking data
gem 'better_errors' # more useful error pages
gem 'heroku'
gem 'thin'


group :assets do
  gem 'uglifier' # compress javascript
  gem 'therubyracer' #  javascript interpreter for uglifier gem
  gem 'jquery-rails'
  gem "twitter-bootstrap-rails"
end

group :development do
  gem 'quiet_assets'
end

gem 'tinymce-rails'
gem 'bootstrap_forms' # easy rails bootstrap forms
gem "sorcery" # magical authentication 
gem 'carrierwave' # file upload
gem 'rmagick'
gem 'fog'
gem 'carousel'
