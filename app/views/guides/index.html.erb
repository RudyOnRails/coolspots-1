<div class="span12">
<% @guides.each do |guide| %>
  <h2><%= link_to guide.name, guide_path(guide) %></h2>
  <div class="row">
    <div class="span2">
      <%= link_to image_tag(guide.spots.first.photo_url, style: "border: 3px solid #bbb"), guide_path(guide) %>
    </div>
    <div class="span8">
      <p><%= guide.spots.count %> Spots</p>
      <p style="color: #777">added by <%= link_to guide.user.username, user_path(guide.user) %>, <%= guide.user.guides.count %> guides, <%= guide.user.spots.count %> spots</p>
      <p><%= guide.votes.count %> Votes</p>
    </div>
  </div>
  <div class="row" style="margin-top: 10px">
    <%= render guide.spots %>
  </div>
<% end %>

</div>